<%= content_for :head, auto_discovery_link_tag(:atom, spaces_path(format: :atom), title: "Federacy: All Spaces") %>
<% content_for :title do %>
  <%= @space.name %> -  Spaces - Federacy
<% end %>

<% content_for :nav do %>
  <%= link_to("Edit Space", edit_space_path) if user_can?(:edit_space, @space) %>
<% end %>

<main>
  <article class="space">
    <header>
      <h1><%= @space.name %></h1>
    </header>

    <section>
      <%= markdown @space.description %>
    </section>
  </article>
</main>

